{
  "name": "smrt-workspace",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "dotenv -e .env -- pnpm exec turbo dev",
    "build": "pnpm exec turbo build",
    "lint": "pnpm exec biome check .",
    "test": "pnpm --filter web test --run",
    "test:e2e": "pnpm exec playwright test",
    "verify": "pnpm lint && pnpm test && pnpm build && pnpm test:e2e"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.2.0",
    "turbo": "^2.7.5"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "pg": "^8.17.1"
  }
}
